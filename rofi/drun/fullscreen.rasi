
configuration {
    modi: [drun, window, combi];
    combi-modi: [drun, window];
    font: "SFMono Nerd Font Mono 16";
    icon-theme: "Papirus";
    show-icons: true;
    sidebar-mode: false;
    terminal: "alacritty";
    display-drun: "ï€‚";
    location: 1;
}

@import "styles/nord.rasi"

window {
    fullscreen: true;
    background-color: @background;
    text-color: @foreground;
    border-color: @border;
    border: 50px;
    margin: 0%;
    padding: 30% 40% 30% 40%;
    xoffset: 0;
    yoffset: 0;
}

element {
    background-color: @background;
    text-color: @foreground;
    orientation: horizontal;
    padding: 0.5%;
}

element-text {
    background-color: #00000000;
    font: "SFMono Nerd Font Mono 10";
    text-color: inherit;
    horizontal-align: 0;
    vertical-align: 0.5;
    text-color: inherit;
}


listview {
    background-color: @background;
    padding: 2%;
    spacing: 5px;
    columns: 1;
    border: 0% 0% 0% 0%;
    scrollbar: false;
    dynamic: true;
    cycle: false;
}

inputbar {
    background-color: @background;
    text-color: @foreground;
    border-color: @border-alt;
    children: [prompt, entry];
    margin: 3% 2% 0% 2%;
    //border: 0.3% 0.12% 0.3% 0.12%;
    border: 0% 0% 0.3% 0%;
    padding: 0.75%;
    //border-radius: 1% 0.5% 1% 0.5%;
    spacing: 0.3%;
    expand: false;
    font: "SFMono Nerd Font Mono 16";
}

entry {
    background-color: @background;
    text-color: @foreground;
    placeholder-color: @foreground;
    font: "SFMono Nerd Font Mono 16";
    placeholder: "Search";
    expand: true;
    blink: true;
}

element normal.urgent,
element alternate.urgent {
    background-color:               @urgent;
    text-color:                     @foreground;
}

element normal.active,
element alternate.active {
    background-color:               @background-alt;
    text-color:                     @foreground;
}

element selected {
    background-color:               @selected;
    text-color:                     @foreground;
    border-radius: 0.55% 0.3% 0.55% 0.3%;
}

element selected.urgent {
    background-color:               @urgent;
    text-color:                     @foreground;
}

element selected.active {
    background-color:               @background-alt;
    color:                          @foreground;
}

element.normal,
element.alternate.normal {
    background-color: @background;
}
